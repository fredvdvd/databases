<Page x:Class="MusicStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicStore"
        mc:Ignorable="d"
        Title="start" d:DesignHeight="450" d:DesignWidth="800">

    <Page.Resources>
        <Style x:Key="navigationButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="30"></Setter>
            <Setter Property="Padding" Value="10"></Setter>
            <Setter Property="MaxWidth" Value="225"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel Grid.Column="0">
            
            <Button Name="oefening1" Content="oefening1" Style="{StaticResource navigationButtonStyle}" Click="Oefening1Button_Click" />
            <Button Name="selectAlbumButton" Content="Button" Style="{StaticResource navigationButtonStyle}" Click="SelectAlbumButton_Click" />
            <Button Name="selectAlbumzxButton" Content="Button" Style="{StaticResource navigationButtonStyle}" Click="SelectAlbumzxButton_Click" />
        </StackPanel>
    </Grid>
</Page>